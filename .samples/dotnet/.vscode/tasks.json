{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/playwright_intro/PlaywrightIntro.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-dotnet-intro",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/playwright_intro/PlaywrightIntro.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "build-locators",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/playwright_locators/PlaywrightLocators.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-locators",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/playwright_locators/PlaywrightLocators.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "build-concepts",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/playwright_concepts/PlaywrightConcepts.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-concepts",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/playwright_concepts/PlaywrightConcepts.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "build-all",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dotnet.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-all",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/dotnet.sln",
                "--settings",
                "${workspaceFolder}/playwright.runsettings"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
